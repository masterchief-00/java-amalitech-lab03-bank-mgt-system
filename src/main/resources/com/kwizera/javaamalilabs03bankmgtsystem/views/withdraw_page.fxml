<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kwizera.javaamalilabs03bankmgtsystem.controllers.WithdrawController">
    <Label layoutX="248.0" layoutY="30.0" text="WITHDRAW">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Label fx:id="currentBalLabel" layoutX="107.0" layoutY="67.0" prefHeight="54.0" prefWidth="375.0"
           text="Current balance:" wrapText="true">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <Label fx:id="label1" layoutX="108.0" layoutY="181.0" prefHeight="27.0" prefWidth="61.0" text="Amount:">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="amountInput" layoutX="170.0" layoutY="182.0" prefHeight="25.0" prefWidth="307.0"/>
    <Label fx:id="errorLabel" alignment="CENTER" layoutX="169.0" layoutY="217.0" prefHeight="54.0" prefWidth="307.0"
           text="[ERROR]" textFill="RED" visible="false" wrapText="true"/>
    <Button fx:id="confirmBtn" layoutX="168.0" layoutY="275.0" mnemonicParsing="false" onAction="#onConfirmClicked"
            prefHeight="27.0" prefWidth="122.0" text="Confirm"/>
    <Button fx:id="cancelBtn" layoutX="355.0" layoutY="275.0" mnemonicParsing="false" onAction="#onCancelClicked"
            prefHeight="27.0" prefWidth="122.0" text="Cancel"/>
    <Label fx:id="maturityLabel" layoutX="107.0" layoutY="123.0" prefHeight="46.0" prefWidth="375.0"
           text="Matures for withdraw in" visible="false" wrapText="true">
        <font>
            <Font size="13.0"/>
        </font>
    </Label>
</AnchorPane>
