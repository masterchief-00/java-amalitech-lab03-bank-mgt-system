    <Label layoutX="262.0" layoutY="25.0" text="HISTORY">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
    <Label layoutX="147.0" layoutY="71.0" prefHeight="19.0" prefWidth="233.0" text="Number of history entries to display:">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
    </Label>
    <TextField fx:id="entriesInput" layoutX="380.0" layoutY="68.0" prefHeight="25.0" prefWidth="66.0" />
    <ListView fx:id="transactionList" layoutX="37.0" layoutY="208.0" prefHeight="173.0" prefWidth="525.0" />
