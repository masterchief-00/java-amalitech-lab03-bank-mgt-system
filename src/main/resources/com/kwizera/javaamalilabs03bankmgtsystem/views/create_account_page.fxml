<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kwizera.javaamalilabs03bankmgtsystem.controllers.CreateAccountController">
    <Label layoutX="207.0" layoutY="27.0" prefHeight="30.0" prefWidth="200.0" text="Create your account."
           textAlignment="CENTER" underline="true">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>
    <Label layoutX="124.0" layoutY="79.0" prefHeight="20.0" prefWidth="37.0" text="Type:">
        <font>
            <Font name="System Bold Italic" size="14.0"/>
        </font>
    </Label>
    <Label layoutX="105.0" layoutY="138.0" prefHeight="20.0" prefWidth="54.0" text="Names:">
        <font>
            <Font name="System Bold Italic" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="accountHolderNamesInput" layoutX="176.0" layoutY="135.0" prefHeight="25.0" prefWidth="304.0"/>
    <Label layoutX="66.0" layoutY="190.0" prefHeight="20.0" prefWidth="91.0" text="Init. balance:">
        <font>
            <Font name="System Bold Italic" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="accountBalanceInput" layoutX="176.0" layoutY="187.0" prefHeight="25.0" prefWidth="304.0"/>
    <Label fx:id="accountNumberLabel" alignment="CENTER" layoutX="179.0" layoutY="262.0" prefHeight="30.0"
           prefWidth="298.0" text="[YOUR ACCOUNT NUMBER]" visible="false">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <Button fx:id="confirmBtn" layoutX="198.0" layoutY="339.0" mnemonicParsing="false" onAction="#onConfirmBtnClicked"
            prefHeight="25.0" prefWidth="91.0" text="CONFIRM"/>
    <Button fx:id="cancelBtn" layoutX="325.0" layoutY="339.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="91.0"
            text="CANCEL" onAction="#onExitClicked"/>
    <ComboBox fx:id="accountTypeInput" layoutX="178.0" layoutY="77.0" prefHeight="25.0" prefWidth="298.0"/>
    <Label fx:id="errorAccTypeLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="178.0" layoutY="102.0"
           prefHeight="25.0" prefWidth="298.0" text="[ERROR]" textFill="RED" visible="false">
        <font>
            <Font name="System Italic" size="12.0"/>
        </font>
    </Label>
    <Label fx:id="errorAccHolderLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="176.0" layoutY="160.0"
           prefHeight="25.0" prefWidth="304.0" text="[ERROR]" textFill="RED" visible="false">
        <font>
            <Font name="System Italic" size="12.0"/>
        </font>
    </Label>
    <Label fx:id="errorBalLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="176.0" layoutY="212.0"
           prefHeight="25.0" prefWidth="304.0" text="[ERROR]" textFill="RED" visible="false">
        <font>
            <Font name="System Italic" size="12.0"/>
        </font>
    </Label>
    <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="173.0" layoutY="299.0"
           prefHeight="19.0" prefWidth="304.0" text="[ERROR]" textFill="RED" visible="false">
        <font>
            <Font name="System Bold Italic" size="13.0"/>
        </font>
    </Label>
</AnchorPane>
